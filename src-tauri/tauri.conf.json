{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "File Crypt",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "windows": [
      {
        "title": "File Crypt - unimanâ„¢",
        "width": 490,
        "height": 780,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "contentProtected": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.file-crypt.uniman",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "../src/*"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "offlineInstaller"
        },
        "wix": {
          "bannerPath": "../src/assets/installer/msi_banner.bmp",
          "dialogImagePath": "../src/assets/installer/msi_dialog.bmp"
        }
      }
    }
  }
}
